<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".UserInterface.LoginActivity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/login_background"
        android:contentDescription="@string/login_top_background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default32dp"
        android:fontFamily="@font/roboto_light"
        android:text="@string/app_name"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/h1"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default16dp"
        android:layout_marginTop="@dimen/default32dp"
        android:layout_marginEnd="@dimen/default16dp"
        android:fontFamily="@font/roboto_light"
        android:text="@string/login_quote"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default32dp"
        android:layout_marginStart="@dimen/default16dp"
        android:layout_marginEnd="@dimen/default16dp"
        android:background="@drawable/login_background_box"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/imageView"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default24dp"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_alignStart="@+id/login_food_image"
                android:layout_marginEnd="150dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/login_Login"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/h2" />

                <View
                    android:layout_width="match_parent"
                    android:layout_height="4dp"
                    android:layout_marginTop="@dimen/default12dp"
                    android:elevation="2dp"
                    android:background="@color/colorPrimary" />

            </LinearLayout>

            <ImageView
                android:id="@+id/login_food_image"
                android:layout_width="110dp"
                android:layout_height="40dp"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="@dimen/default16dp"
                android:layout_marginTop="@dimen/default4dp"
                android:background="@drawable/login_food_image"
                android:contentDescription="@string/login_description_food_image" />


        </RelativeLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default24dp"
            android:layout_marginTop="@dimen/default24dp"
            android:layout_marginEnd="@dimen/default24dp"
            android:background="@drawable/login_google_box"
            android:drawableStart="@drawable/login_google_icon"
            android:elevation="2dp"
            android:fontFamily="@font/roboto_black"
            android:paddingStart="@dimen/default16dp"
            android:paddingEnd="@dimen/default32dp"
            android:text="@string/login_google"
            android:textColor="@android:color/darker_gray"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/login_or"
            android:layout_marginTop="@dimen/default8dp"
            android:textColor="@color/colorPrimary"
            android:textSize="16sp"
            android:layout_gravity="center"/>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default24dp"
            android:layout_marginTop="@dimen/default8dp"
            android:layout_marginBottom="@dimen/default16dp"
            android:layout_marginEnd="@dimen/default24dp"
            android:background="@drawable/login_facebook_box"
            android:drawableStart="@drawable/login_facebook_icon"
            android:elevation="2dp"
            android:fontFamily="@font/roboto_black"
            android:paddingStart="@dimen/default16dp"
            android:paddingEnd="@dimen/default32dp"
            android:text="@string/login_google"
            android:textColor="@android:color/white"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>