<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/intro_background2"
    tools:context=".fragment.IntroSlider2">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start|top"
        android:layout_marginStart="@dimen/default16dp"
        android:layout_marginTop="@dimen/default84dp"
        android:fontFamily="@font/roboto_condensed_regular"
        android:text="@string/intro_slider2_title"
        android:textAllCaps="true"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/h2" />

    <TextView
        android:layout_width="175dp"
        android:layout_height="wrap_content"
        android:layout_gravity="top|end"
        android:layout_marginTop="@dimen/default48dp"
        android:layout_marginEnd="@dimen/default16dp"
        android:layout_marginBottom="@dimen/default48dp"
        android:fontFamily="@font/roboto_condensed_regular"
        android:text="@string/intro_slider2_quotes"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/h3" />

</FrameLayout>