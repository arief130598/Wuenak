<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/login_background"
    tools:context=".Activity.LoginActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/default48dp"
        android:fontFamily="@font/roboto_light"
        android:text="@string/app_name"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/h1"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/default16dp"
        android:layout_marginTop="@dimen/default16dp"
        android:layout_marginEnd="@dimen/default16dp"
        android:fontFamily="@font/roboto_light"
        android:text="@string/login_quote"
        android:textAlignment="center"
        android:textColor="@color/colorWhite"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:layout_marginTop="@dimen/default32dp"
        android:layout_marginEnd="@dimen/default24dp"
        android:background="@drawable/login_background_box"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView2">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:layout_marginStart="@dimen/default56dp"
            android:layout_marginTop="@dimen/default16dp"
            android:layout_marginEnd="@dimen/default56dp"
            android:background="@drawable/login_food_image"
            android:contentDescription="@string/login_description_food_image" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginTop="@dimen/default16dp"
            android:fontFamily="@font/roboto_condensed_regular"
            android:text="@string/login_find_new_recipes"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/h3" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:fontFamily="@font/roboto_condensed_regular"
            android:text="@string/login_start"
            android:textColor="@color/colorPrimary"
            android:textSize="@dimen/h2" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default24dp"
            android:layout_marginTop="@dimen/default16dp"
            android:layout_marginEnd="@dimen/default24dp"
            android:background="@drawable/login_google_box"
            android:drawableStart="@drawable/login_google_icon"
            android:elevation="2dp"
            android:fontFamily="@font/roboto_black"
            android:paddingStart="@dimen/default16dp"
            android:paddingEnd="@dimen/default32dp"
            android:text="@string/login_google"
            android:textAllCaps="false"
            android:textColor="@android:color/darker_gray"
            android:textSize="16sp"
            android:textStyle="bold" />

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/default24dp"
            android:layout_marginTop="@dimen/default16dp"
            android:layout_marginEnd="@dimen/default24dp"
            android:layout_marginBottom="@dimen/default16dp"
            android:background="@drawable/login_facebook_box"
            android:drawableStart="@drawable/login_facebook_icon"
            android:elevation="2dp"
            android:fontFamily="@font/roboto_black"
            android:paddingStart="@dimen/default16dp"
            android:paddingEnd="@dimen/default32dp"
            android:text="@string/login_facebook"
            android:textAllCaps="false"
            android:textColor="@android:color/white"
            android:textSize="16sp"
            android:textStyle="bold" />

    </LinearLayout>


</androidx.constraintlayout.widget.ConstraintLayout>